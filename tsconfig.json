{
	"compilerOptions": {
		"module": "commonjs",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": false,
        "target": "es2015",
        "moduleResolution": "node",
        "outDir": "./lib"
	},
	"include": [
		"src/**/*",
		"types/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"./lib"
	]
}
